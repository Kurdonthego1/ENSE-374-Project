<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workout - FitBro</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<header>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="#">FitBro</a>
            <img src="/images/luxa.org-no-background-file-r5k61LsuX8UW9jYAi8uiZMwb.png" id="header-image-logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse menu-button" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Menu
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/home">Home</a></li>
                            <li><a class="dropdown-item" href="/add-exercisepage">Add Exercise</a></li>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<body>
    <!--Add a new workout-->





    <!-- Content -->
    <div class="container mt-5">
        <h2 class="text-center">Workout Plan for <%= username %></h2>
        <% activeEx.forEach(exercise => { %>
            <% if (exercise.creator === username) { %>
                <h3><%= exercise.name %></h3>
        <table class="table table-bordered mt-4">
            <thead class="table-light">
                <tr>
                    <th>Set</th>
                    <th>Weight</th>
                    <th>Reps</th>
                    <th>Finish Set</th>
                </tr>
            </thead>
            <tbody>
            <% activeSet.forEach(Set => { %>
                <% if (Set.creator === username && Set.exercise.toString() === exercise._id.toString()) { %>
                    <tr>
                    <form action="finishSet" method="post">
                    <td><%= Set.setNumber %></td>
                    <td><input type="text" name="Weight" value="<%= Set.weight || '' %>"></td>
                    <td><input type="text" name="Reps" value="<%= Set.reps || '' %>"></td>
                    <td><input type="submit" value="&#10003" class="btn btn-primary">
                    <input type="hidden" name="setId" value="<%= Set._id %>">
                    <input type="hidden" name="exerciseId" value="<%= exercise._id %>">
                    <input type="hidden" name="exerciseId" value="<%= activeworkout._id %>">                      
                    </form>
                  </tr>
                <% } %>
            <% }); %> 
            </tbody>
        </table>
        <form action="/AddSet" method="post">
            <input type="hidden" name="exerciseId" value="<%= exercise._id %>">
            <button type="submit" class="btn btn-primary">Add Set</button>
        </form>
            <% } %>
        <% }); %>
        <br>
        <div class="d-flex justify-content-between">
            <form action="/add-exercisepage" method="get">
                <button type="submit" class="btn btn-primary">Add Exercise</button>
            </form>
            <form action="/FinishWorkout" method="post">
                <button type="submit" class="btn btn-outline-primary">Finish</button> 
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <footer class="text-center mt-4 py-3">
        <p>&copy; 2024 FitBro. All rights reserved.</p>
    </footer>
</body>
</html>



