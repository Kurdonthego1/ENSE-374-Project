<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Exercise - FitBro</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<header>
    <div class="container header">
        <!-- Left: Home link -->
        <div class="branding">
            <a class="navbar-brand" href="/home">FitBro</a>
        </div>
        
        <!-- Center: Logo -->
        <div class="logo-center">
            <img src="./images/luxa.org-no-background-file-r5k61LsuX8UW9jYAi8uiZMwb.png" id="header-image-logo">
        </div>
        
        <!-- Right: Logout link -->
        <a href="/logout" class="logout-link">Logout</a>
    </div>
</header>

<body class="add-exercisepage">
    <!-- Content -->
    <main class="flex-grow-1">
        <div class="container mt-5">
            <h2 class="welcome-heading">Add Exercise</h2>

            <div class="row row-cols-1 row-cols-md-3 g-4 mt-5" id="exercise-section">
                <!-- Sample Exercise Cards -->
                <% exLists.forEach(exList => { %>
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= exList.name %></h5>
                                <p class="card-text" ><%= exList.desc %></p>
                                <form action="/addExtoWorkout" method="post">
                                    <input type="hidden" name="workoutId" value="<%= activeworkout._id %>">
                                    <input type="hidden" name="Exname" value="<%= exList.name %>">
                                    <button type="submit" class="addbtn">Add</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }); %>            
            </div>
            <div class="row mt-4">
                <div class="col-md-6 mx-auto">
                    <div class="card">
                        <div class="card-header text-center">
                            <h5>Submit a New Exercise</h5>
                        </div>
                        <div class="card-body">
                            <form action="/addExtoList" method="post">
                                <input type="hidden" name="workoutId" value="<%= activeworkout._id %>">
                                <div class="mb-3">
                                    <label for="Exname" class="form-label">Exercise Name</label>
                                    <input name="Exname" type="text" id="Exname" class="form-control" placeholder="Enter exercise name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="Desc" class="form-label">Description</label>
                                    <input name="Desc" type="text" id="Desc" class="form-control" placeholder="Enter exercise Description" required>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Submit Exercise</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
</body>

    <!-- Bootstrap JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <footer class="text-center mt-4 py-3">
        <p>&copy; 2024 FitBro. All rights reserved.</p>
    </footer>
</html>
