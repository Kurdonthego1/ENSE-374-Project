<body class="home-page">
    <!-- Main Content -->
     <!--REMEBER TO DO THIS SHIT IN EXPRESS-->
    <div class="container text-center mt-5">
        <h1>Welcome Back</h1>
        <h3><%= username %></h3>
        <div class="mt-4">
            <form action ="/add-workout" method="post">
            <input type="submit" value="Get Started" class="btn btn-primary btn-lg">
            </form>
        </div>
    </div>

    <!-- Workout Templates -->
    <div class="container mt-5">
        <h2>Workout Templates</h2>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <div class="col">
                <% Workouts.forEach(workout => { %>
                    <% if (workout.creator === username) { %>
                        <%- include('partials/workouts', { workout: workout, username: username }) %>
                    <% } %>
                <% }); %>
            </div>
        </div>
    </div>
    <!-- Bootstrap JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
